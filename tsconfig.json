{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
